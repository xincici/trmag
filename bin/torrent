#!/usr/bin/env node
var torrent = require("../torrent").torrent;
var program = require("commander");

program
    .version('0.0.1')
    .option('-n --name <n>', 'torrent name')
    .option('-s --size <n>', 'max torrent number')
    .parse(process.argv);
if( !process.argv[2] ){
    program.help();
}

if( !program.name || typeof program.name !== "string" ){
    program.name = process.argv[2];
}

torrent( program );
